section.section.section-platform
	.wrapper.wrapper_platform.block-with-decor
		h2.h2-title.h2-title_platform !{aboutPlatformText.title[lang]}
		p.prev-text-platform.big-text.center !{aboutPlatformText.text[lang]}
		.platform-content-wrapper
			.platform-img.block-with-decor
				img(data-aos="zoom-in" data-aos-delay="300" src=baseDir + "assets/images/platform_1x.jpg" srcset=baseDir + "assets/images/platform_1x.jpg 1x, " + baseDir + "assets/images/platform_2x.jpg 2x" alt="platform")
			.platform-row
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="300") !{aboutPlatformText.advantage1[lang]}
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="450") !{aboutPlatformText.advantage2[lang]}
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="600") !{aboutPlatformText.advantage3[lang]}
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="750") !{aboutPlatformText.advantage4[lang]}
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="900") !{aboutPlatformText.advantage5[lang]}
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="1050") !{aboutPlatformText.advantage6[lang]}
				.platform-list__item.big-text(data-aos="fade-in" data-aos-delay="1200") !{aboutPlatformText.advantage7[lang]}
				a(href=linkSignup).btn.btn-platform !{buttonText.btnStartTrade[lang]}

