section.section.section-goals
	.wrapper.wrapper_goals
		.goals-decor.decor-img(data-aos="zoom-in" data-aos-delay="300")
		h2.h2-title.h2-title_goals !{aboutGoalsText.h2[lang]}
		.goals-list-wrapper
			.goals-img.block-with-decor
				img(data-aos="zoom-in" data-aos-delay="300" src=baseDir + "assets/images/goals_1x.jpg" srcset=baseDir + "assets/images/goals_1x.jpg 1x, " + baseDir + "assets/images/goals_2x.jpg 2x" alt="goals")
			.goals-list
				.goals-list__item.goals-list__item_1(data-aos="fade-in" data-aos-delay="300")
					.goals-icon.goals-icon_1
					h3.goals-list__title.h3-title !{aboutGoalsText.goal1.title[lang]}
					p.goals-list__text !{aboutGoalsText.goal1.text[lang]}
				.goals-list__item.goals-list__item_2(data-aos="fade-in" data-aos-delay="450")
					.goals-icon.goals-icon_2
					h3.goals-list__title.h3-title !{aboutGoalsText.goal2.title[lang]}
					p.goals-list__text !{aboutGoalsText.goal2.text[lang]}
