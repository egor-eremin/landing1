section.section.section-steps
	.steps-decor.decor-img(data-aos="zoom-in" data-aos-delay="300")
	.wrapper-parallax.scene
		.parallax-item.parallax-item-section-2(data-depth="0.05")
		.parallax-item.parallax-item-section-1(data-depth="0.03")
	.wrapper.wrapper-steps
		h2.h2-title.h2-title_steps !{indexStepsText.h2[lang]}
		.steps-content-wrapper
			.steps-img.block-with-decor
				img(data-aos="zoom-in" data-aos-delay="300" src=baseDir + "assets/images/steps_1x.jpg" srcset=baseDir + "assets/images/steps_1x.jpg 1x, " + baseDir + "assets/images/steps_2x.jpg 2x" alt="steps")
			.steps-list
				.steps-list-item.steps-list__item-1(data-aos="fade-in" data-aos-delay="300")
					h3.steps-list__title.h3-title !{indexStepsText.step1.title[lang]}
					p.steps-list__text !{indexStepsText.step1.text[lang]}
				.steps-list-item.steps-list__item-2(data-aos="fade-in" data-aos-delay="450")
					h3.steps-list__title.h3-title !{indexStepsText.step2.title[lang]}
					p.steps-list__text !{indexStepsText.step2.text[lang]}
				.steps-list-item.steps-list__item-3(data-aos="fade-in" data-aos-delay="600")
					h3.steps-list__title.h3-title !{indexStepsText.step3.title[lang]}
					p.steps-list__text !{indexStepsText.step3.text[lang]}
				a(href=linkSignup).btn.btn-steps !{buttonText.btnStartTrade[lang]}
